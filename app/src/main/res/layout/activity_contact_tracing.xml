<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactTracing">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="90dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="8dp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            android:src="@drawable/frame"
            android:textColor="@color/SS_RED"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/scan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@drawable/cornarbox"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunitosans_extrabold"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Check If SomeOne is nearby."
            android:textColor="#fff"
           android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Search for newarby COVID-19 patient" />

        <TextView
            android:id="@+id/let"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/cornarboxred"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"

            android:text="Let Others Know I am Corona Positive."
            android:textColor="#fff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Turn Bluetooth on so that others can find COVID-19 positive patient near you." />

    </LinearLayout>


    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineProvider="bounds"
        app:blurOverlayColor="@color/overlayColor"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:contentDescription="@string/todo"
                android:padding="5dp"
                android:src="@drawable/back_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:fontFamily="@font/nunitosans_black"
                android:gravity="center"
                android:text="Contact tracing"
                android:textColor="@color/SS_DarkBlue"
                android:textSize="22sp" />
        </RelativeLayout>
    </eightbitlab.com.blurview.BlurView>

</RelativeLayout>