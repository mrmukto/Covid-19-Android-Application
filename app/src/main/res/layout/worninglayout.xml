<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Worning!"
        android:gravity="center"
        android:textColor="@color/SS_RED"
        android:textSize="35sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:textColor="@color/SS_RED"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:text="There is a covid-19 patient nearby. Please be careful. We recommend making sure you are wearing a mask and keep a distance of 1 miter from each person."
        android:lineSpacingExtra="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dismiss"
        android:id="@+id/dismissbutton"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/SS_RED"
        android:layout_margin="16dp"
        android:textColor="#fff"/>

</LinearLayout>